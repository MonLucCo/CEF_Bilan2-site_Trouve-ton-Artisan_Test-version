// Note: This file is dedicated to Angular.js and Node.js common configuration.
/* Configuration commune Ã  toutes les technologies (Angular.js et Node.js) du projet */
{
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "ES2022"
  }
}